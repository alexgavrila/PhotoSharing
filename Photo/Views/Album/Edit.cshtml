@model Photo.Models.Album
@{
    ViewBag.Title = "Editare categorie";
}




<div class="row justify-content-center text-center">
    <h2>@ViewBag.Title</h2>
</div>
<div class="row justify-content-center text-center">
    @using (Html.BeginForm(actionName: "Edit", controllerName: "Album"))
    {
        @Html.Hidden("AlbumId", Model.AlbumId)

        @Html.HttpMethodOverride(HttpVerbs.Put)

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @Html.Label("Name", "Denumire album")
        <br />
        @Html.Editor("Name")
        @Html.ValidationMessageFor(m => m.Name, "", new { placeholder = "Denumire", @class = "text-danger" })
        <br />
        <br />

        <button class="btn btn-primary rounded-pill" type="submit">Modifica album</button>
    }
</div>
