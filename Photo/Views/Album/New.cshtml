@model Photo.Models.Album
@{
    ViewBag.Title = "Adaugare Album";
}


<div class="row justify-content-center text-center">
    <h2>@ViewBag.Title</h2>
</div>
<div class="row justify-content-center text-center">
    <br />
    @using (Html.BeginForm(actionName: "New", controllerName: "Album"))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <br />

        @Html.TextBox("Name", null, new { placeholder = "Denumire", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        <br /><br />
        @Html.Hidden("Date", DateTime.Now, new { @class = "form-control" })

        <button class="btn btn-primary rounded-pill" type="submit">Adauga album</button>
    }
</div>
