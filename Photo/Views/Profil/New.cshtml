@model Photo.Models.UserProfile
@{
    ViewBag.Title = "New profile";
}


<div class="row justify-content-center text-center">
    <br />
    <div class="row">
        <div class="col-md-16">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Your Profile</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-16">

                            @using (Html.BeginForm(actionName: "New", controllerName: "Profil"))
                            {

                                <div class="form-group row">
                                    <label for="username" class="col-4 col-form-label">email</label>
                                    <div class="col-4">
                                        <p> @User.Identity.Name  </p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="name" class="col-4 col-form-label">First Name</label>
                                    <div class="col-8">
                                        @Html.TextBoxFor(m => m.FirstName, new { htmlAttributes = new { placeholder = "First Name", @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastname" class="col-4 col-form-label">Last Name</label>
                                    <div class="col-8">
                                        @Html.TextBoxFor(m => m.LastName, new { htmlAttributes = new { placeholder = "Last Name", @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="birth" class="col-4 col-form-label">Birth Date</label>
                                    <div class="col-8">
                                        @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { placeholder = "Birth Date", @class = "form-control", @type = "date" } })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="publicinfo" class="col-4 col-form-label">Descriere</label>
                                    <div class="col-8">
                                        @Html.TextAreaFor(m => m.TextProfil, new { htmlAttributes = new { cols = "40", rows = "4", placeholder = "Descriere", @class = "form-control" } })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="offset-4 col-8">

                                        <button class="btn btn-primary rounded-pill" type="submit">Salveaza</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



</div>
